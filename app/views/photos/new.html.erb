<h1>Submit a Photo</h1>

<div style="width:400px; margin: auto; margin-top: 25px">
<%= form_for(@photo) do |f| %>

  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <strong>Cannot save due to <%= pluralize(@photo.errors.count, "error") %>:
      </strong>
      <ul>
        <% @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :username, placeholder: "Username", class: "form-control" %>  
  </div>
  <div class="form-group">
    <%= f.text_field :url, placeholder: "URL", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_area :caption, placeholder: "Caption", class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>